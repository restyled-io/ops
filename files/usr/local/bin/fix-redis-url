#!/bin/sh
set -eu

get_heroku_redis_url() {
  heroku config --app restyled-io 2>&1 |
    sed '/^REDIS_URL: *\(.*\)$/!d; s//\1/'
}

redis_url=$(get_heroku_redis_url)

if [ -z "$redis_url" ]; then
  echo "Unable to determine Heroku REDIS_URL" >&2
  exit 1
fi

echo "=> REDIS_URL=$redis_url..."
ecs-deploy-restyled --env restyled REDIS_URL "$redis_url"
